	<div id="addebookinit">
		<h3>Add item records for ebooks</h3>

		<form action="/cgi-bin/koha/tools/add-ebook-items.pl" method="post">
		<fieldset class="rows">
			<ol>
				<li><label for="batch_id">Import batch: </label>
					<input type="text" name="batch_id" id="batch_id" value="<!-- TMPL_VAR NAME="batch_id" -->" readonly>
					<!-- TMPL_IF NAME="biblios" -->( Biblios: 
					<!-- TMPL_LOOP NAME="biblios" --><!-- TMPL_UNLESS NAME="__first__" -->, <!-- /TMPL_UNLESS --><!-- TMPL_VAR NAME="value" --><!-- /TMPL_LOOP --> )
					<!-- /TMPL_IF -->
				</li>
			</ol>
		</fieldset>

		<fieldset class="rows">
			<ol>
				<li><label for="reverse">Reverse an import: </label>
					<input type="checkbox" name="reverse" id="reverse" <!-- TMPL_IF NAME="reverse" -->checked="checked"<!-- /TMPL_IF --> onchange='{
  var c_value = this.checked;
  var f_block = document.getElementById("import_actions");
  var s_input = document.getElementById("submit_reverse");
  if ( c_value ) {
    f_block.style.display = "none";
    s_input.value = "on";
  } else {
    f_block.style.display = "block";
    s_input.value = "";
  }
}'>
				</li>
			</ol>
		</fieldset>

		<fieldset class="action">
			<input type="hidden" name="op" value="select"/>
			<input type="hidden" name="branchcode" value="<!-- TMPL_VAR NAME="branchcode" -->"/>
